{
  "name": "@yeti/contracts",
  "version": "1.0.0",
  "description": "Solidity smart contracts for yeti-finance lending protocol",
  "scripts": {
    "build": "npm run yeti:compile && npm run yeti:typechain",
    "yeti:dev": "hardhat compile && hardhat yeti:dev --network node",
    "yeti:compile": "SKIP_TASKS_LOAD=true hardhat compile",
    "yeti:typechain": "SKIP_TASKS_LOAD=true hardhat typechain",
    "yeti:test": "npm run yeti:compile && hardhat test ./test/setup/*.spec.ts ./test/yeti/*.spec.ts"
  },
  "author": "Pavel Pleshko",
  "license": "ISC",
  "devDependencies": {
    "@eth-optimism/smock": "^1.1.10",
    "@nomiclabs/buidler": "^1.4.8",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.2.22",
    "@types/cli-spinner": "^0.2.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "hardhat": "^2.7.0",
    "hardhat-ethers": "^1.0.1",
    "hardhat-gas-reporter": "^1.0.6",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "root": "github:nomiclabs/buidler",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "typechain": "^5.2.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.3.1",
    "bignumber.js": "^9.0.2",
    "openzeppelin-solidity": "^4.4.0"
  }
}
